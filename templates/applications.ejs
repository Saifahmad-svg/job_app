        .sidenav a {
            padding: 37px 8px 6px 70px;
            width: 350px;
            height: 31px;
            text-decoration: none;
            font-size: 25px;
            font-family: "Lato", sans-serif;
            font-style: normal;
            font-weight: bold;
            font-size: 26px;
            line-height: 31px;
            color: #FFFFFF;
            display: block;
        }
        .container {
        width: auto;
        padding-left: 44px;
        padding-right: 44px;
      }
        .container h2{
            width: 725px;
            height: 58px;
            font-family: "Lato", sans-serif;
            font-style: normal;
            font-weight: bold;
            font-size: 48px;
            line-height: 58px;
            color: #5D4DA8;
        }
        .arrowWrap {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .arrowIcon{
        padding-top: 37px;
        padding-right: 8px;
      }
      .proftypeWrap {
        background-image: url(../css/rotated-orange-patch.png), url(../css/yellow-patch-rotated.png);
        background-position: bottom right -30px, right 60px top -65px;
        background-repeat: no-repeat;
        /* background-size: cover; */
        /* height: 100%; */
        padding-top: 107px;
        width: auto;
      }
      .wrap {
        display: flex;
        /* justify-content: space-around; */
        width: 100%;
        gap: 0px;
      }
        .nav{
        width: 78px;
        height: 22px;
        padding: 30px 0;
        padding-left: 60px;
        }
 
        .totalPost{
          padding-top: 34px;
          font-family: "Lato",sans-serif;
            font-style: normal;
            font-weight: bold;
            font-size: 22px;
            padding-top: 52px;
            line-height: 26px;
            color: #909090;
        }
        th{
            font-family: "Lato",sans-serif;
            font-style: normal;
            font-weight: bold;
            font-size: 25px;
            line-height: 30px;
        }
        td, th{
            padding : 38px 124px 25px 0;
        }
        td{
            font-family: "Lato",sans-serif;
            font-style: normal;
            font-weight: normal;
            font-size: 18px;
            line-height: 22px;
           
            color: #5E5E5E;
            padding-top: 38px;
            border-top: 1px solid #EBEBEB;
            text-align: center;
        }
        td a{
            color: #5D4DA8;
        }
        tr.bordered td{
            border-bottom: 1px solid #000;
        }
        table{
            border-collapse: collapse;
        }
        h2, p{
          padding: 0;
          margin: 0;
        }
        @media only screen and (max-width: 999px) {
          .sidenav {
          display: none;
        }
        .container {
          padding-left: 35px;
          padding-right: 35px;

          padding-top: 20px;
        }
        p {
          margin: 0px;
          padding: 0px;
        }
        .proftypeWrap {
          height: 1400px;
        }
        }
    </style>
</head>
<body>
    <div class="wrap">
    <div class="sidenav">
        <nav>
            <img class="nav" src="/css/Yuung White.png"> 
        </nav>
        <a href="/company/proftype">Type of Profile</a>
