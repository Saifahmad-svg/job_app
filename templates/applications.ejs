    <style>
        body {
        margin: 0;
        padding: 0;
      }
          .sidenav {
        width: 350px;
        height: 100vh;
        position: relative;
        z-index: 1;
        background: #5d4da8;
        /* box-shadow: 4px 0px 4px rgb(221 221 221 / 25%); */
